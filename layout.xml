<SimpleGUI>
    <LayoutList>
        <LayoutList direction="horizontal" margin="{4,4,4,4}">
            <Button background-color="grey" border-color="black" border="{1,1,1,1}" margin="{4,4,4,4}">
                <Text text="Add"/>
            </Button>
            <Button background-color="grey" border-color="black" border="{1,1,1,1}" margin="{4,4,4,4}">
                <Text text="Remove"/>
            </Button>
            <Button background-color="grey" border-color="black" border="{1,1,1,1}" margin="{4,4,4,4}">
                <Text text="Take Screenshot"/>
            </Button>
            <Button background-color="grey" border-color="black" border="{1,1,1,1}" margin="{4,4,4,4}">
                <Text text="Save Config"/>
            </Button>
            <Button background-color="grey" border-color="black" border="{1,1,1,1}" margin="{4,4,4,4}">
                <Text text="Load Config"/>
            </Button>
        </LayoutList>
        
        <LayoutList direction="vertical" margin="{4,4,4,4}">
            <LayoutList direction="horizontal">
                <Text text="Type : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
            <LayoutList direction="horizontal">
                <Text text="X : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
            <LayoutList direction="horizontal">
                <Text text="Y : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
            <LayoutList direction="horizontal">
                <Text text="Width : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
            <LayoutList direction="horizontal">
                <Text text="Height : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
            <LayoutList direction="horizontal">
                <Text text="Keyboard Input : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>

            <LayoutList direction="horizontal">
                <Text text="Gamepad Input : " selectable="true"/>
                <Textbox min-width="64" min-height="18">
                </Textbox>
            </LayoutList>
            
        </LayoutList>
    </LayoutList>
</SimpleGUI>